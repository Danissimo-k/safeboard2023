{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
      "@models/*": [
        "./src/models/*"
      ],
      "@utils/*": [
        "./src/lib/utils/*"
      ],
      "@hooks/*": [
        "./src/lib/hooks/*"
      ],
      "@features/*": [
        "./src/features/*"
      ],
      "@services/*": [
        "./src/api/services/*"
      ],
      "@mappers/*": [
        "./src/api/mappers/*"
      ],
      "@dtos/*": [
        "./src/api/dtos/*"
      ],
      "@store/*": [
        "./src/store/*"
      ],
      "@routes/*": [
        "./src/routes/*"
      ],
      "@lib/*": [
        "./src/lib/*"
      ],
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
